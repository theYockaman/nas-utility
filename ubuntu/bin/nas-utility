#!/bin/bash
set -e

# --- Default Configuration ---
WHIPTAIL=false
ARGS=()

# --- Functions ---
source "/usr/local/lib/$APP_NAME/utils.sh"







# --- Main ---
main() {

    #  Parse global arguments
    parse_global_args "$@"

    # If no arguments provided, show help
    if [ ${#ARGS[@]} -eq 0 ]; then
        show_help
        exit 0
    fi

    # --- Run Actions ---
    CMD="${ARGS[0]}"
    shift

    case $CMD in
        -i|install)
            install_menu "${ARGS[@]}"
            ;;
        -u|uninstall)
            uninstall_menu "${ARGS[@]}"
            ;;
        -d|delete)
            delete_app "${ARGS[@]}"
            ;;
        -h|help)
            show_help
            ;;
        *)
            show_help
            ;;
    esac
}








